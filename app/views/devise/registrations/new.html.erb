<div class="form f c">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="top-bar f r">
      <%= render 'shared/back_button' %>
      <h2>SIGN UP</h2>
      <%= f.submit "Next", class: 'topbar-button' %>
    </div>
    <div class="inputs-container f c">
      <div class="registration inputs f c">

        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name" %>

        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>

        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
        <% if @minimum_password_length %>
          (<%= @minimum_password_length %> characters minimum)
        <% end %>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Confirmation" %>
      </div>
    </div>
  <% end %>
</div>
<div class="bottom-block f">
  <%= render "devise/shared/error_messages", data: { turbo_frame: "modal" }, resource: resource %>
</div>
